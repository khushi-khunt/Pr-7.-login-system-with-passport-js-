
<%- include('Header') %>
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Show Blogs</h4>
                    <!-- <button  class="btn btn-success me-5">
                        <a class="text-light" href="/add">Add</a>
                    </button> -->
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title m-b-0">Insta Posts</h4>
                        </div>
                        <div class="comment-widgets scrollable d-flex flex-wrap">
                            <!-- views/Viewblog.ejs -->
                          
                            <% blog.map((val) => { %>
                                <div class="col-6  flex-column comment-row ">
                                    <div class="p-2 w-100 shadow"><img src="<%= val.image%>" alt="user"  width="50"
                                            class="rounded w-100 img-fluid"></div>
                                    <div class="comment-text active w-100 pt-3">
                                        <h4 class="font-medium"><%= val.title%></h4>
                                        <span class="m-b-15 d-block"><%= val.description%></span>
                                        <div class="comment-footer">  
                                            <button type="button" class="btn btn-cyan btn-sm rounded ">
                                                <a class="text-white" href="/editBlog?editId=<%= val.id%>">Edit</a>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm  rounded" >
                                                <a class="text-white" href="/deleteBlog?deletId=<%= val.id%>">Delete</a>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                    
                        </div>
                    </div>
                    <!-- accoridan part -->

                    <!-- card new -->

                </div>

            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>
    <%- include('Footer') %>